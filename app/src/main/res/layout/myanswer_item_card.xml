<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/questions"
        app:cardCornerRadius="20dp"
        app:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_user_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/ic_person_black_24dp" />

            <TextView
                android:id="@+id/my_uname_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp"
                android:layout_toRightOf="@+id/tv_user_image"
                android:text="UserName"
                android:textColor="@android:color/holo_blue_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/my_time_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/my_uname_view"
                android:layout_alignStart="@+id/my_uname_view"
                android:layout_below="@+id/my_uname_view"
                android:text="Time"
                android:textColor="@color/time_color" />

            <TextView
                android:id="@+id/my_category_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Category"
                android:textColor="@color/category_color" />

            <TextView
                android:id="@+id/my_qstring_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_time_view"
                android:padding="5dp"
                android:text="Question string"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/my_A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/my_qstring_view"
                android:padding="5dp"
                android:text="A :" />

            <TextView
                android:id="@+id/my_astring_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_qstring_view"
                android:layout_toRightOf="@id/my_A"
                android:elevation="-3dp"
                android:padding="5dp"
                android:text="Answer string"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/my_views_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/my_A"
                android:layout_marginTop="5dp"
                android:text="views"
                android:textColor="@color/time_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_astring_view"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/my_views_view"
                android:text="replies" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>