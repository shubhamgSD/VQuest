<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="20dp"
        app:contentPadding="10dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/questions">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <TextView
               android:id="@+id/qstring_view"
               android:layout_width="match_parent"
               android:layout_height="70dp"
               android:layout_alignParentLeft="true"
               android:layout_alignParentStart="true"
               android:layout_centerVertical="true"
               android:text="Question String and Category"
               android:textAlignment="center"
               android:textSize="16sp"
               android:textStyle="bold" />

           <ImageView
               android:id="@+id/uimage_view1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentLeft="true"
               android:layout_alignParentStart="true"
               android:layout_alignParentTop="true"
               android:src="@drawable/anonymous_user_image" />

           <TextView
               android:id="@+id/uname_view2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentTop="true"
               android:layout_marginLeft="18dp"
               android:layout_marginStart="18dp"
               android:layout_toEndOf="@+id/uimage_view1"
               android:layout_toRightOf="@+id/uimage_view1"
               android:text="UserName"
               android:textStyle="bold" />


           <TextView
               android:id="@+id/time_view2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignLeft="@+id/uname_view2"
               android:layout_alignStart="@+id/uname_view2"
               android:layout_below="@+id/uname_view2"
               android:text="Time" />

           <TextView
               android:id="@+id/views_view"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentBottom="true"
               android:layout_alignParentLeft="true"
               android:layout_alignParentStart="true"
               android:text="views" />

           <TextView
               android:id="@+id/reply_view"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignLeft="@+id/time_view2"
               android:layout_alignParentBottom="true"
               android:layout_alignStart="@+id/time_view2"
               android:layout_marginLeft="15dp"
               android:text="replies" />

           <TextView
               android:id="@+id/category_view"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignBottom="@+id/uname_view2"
               android:layout_alignParentEnd="true"
               android:layout_alignParentRight="true"
               android:text="Category" />
       </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
