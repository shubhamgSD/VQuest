<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:cardCornerRadius="10dp"
    app:contentPadding="10dp"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/answers"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/astring_view"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Answer String"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/uimage_view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/anonymous_user_image" />

        <TextView
            android:id="@+id/uname_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@+id/uimage_view1"
            android:layout_toRightOf="@+id/uimage_view1"
            android:text="UserName"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_report1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Report/Edit" />

        <TextView
            android:id="@+id/time_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/uname_view2"
            android:layout_alignStart="@+id/uname_view2"
            android:layout_below="@+id/uname_view2"
            android:text="Time" />

        <Button
            android:id="@+id/btn_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Like" />

        <TextView
            android:id="@+id/likes_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_like"
            android:layout_alignBottom="@+id/btn_like"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:layout_toEndOf="@+id/btn_like"
            android:layout_toRightOf="@+id/btn_like"
            android:text="Likes" />


    </RelativeLayout>

</android.support.v7.widget.CardView>


</RelativeLayout>
