<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:contentPadding="10dp"
    android:layout_marginTop="5dp"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/answers"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/astring_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/time_view2"
            android:padding="10dp"
            android:text="Answer String"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <View
            android:id="@+id/divider_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/astring_view"
            android:layout_marginBottom="5dp"
            android:background="@color/naviation" />

        <ImageView
            android:id="@+id/uimage_view1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/annonymousimage" />

        <TextView
            android:id="@+id/uname_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@+id/uimage_view1"
            android:layout_toRightOf="@+id/uimage_view1"
            android:text="UserName"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_report1"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="Report"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:textColor="@color/red" />

        <TextView
            android:id="@+id/time_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/uname_view2"
            android:layout_alignStart="@+id/uname_view2"
            android:layout_below="@+id/uname_view2"
            android:text="Time" />

        <Button
            android:id="@+id/btn_like"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/divider_line"
            android:text="Like" />

        <TextView
            android:id="@+id/likes_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider_line"
            android:layout_alignBaseline="@+id/btn_like"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/btn_like"
            android:text="Likes" />


    </RelativeLayout>

</android.support.v7.widget.CardView>


</RelativeLayout>
