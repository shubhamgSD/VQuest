<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_answers"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.csy.vquest.AnsFragment">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="5dp"
        android:layout_margin="10dp"
        app:contentPadding="5dp"
        app:cardBackgroundColor="@color/question"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">


            <Button
                android:id="@+id/btn_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="Answer" />

            <TextView
                android:id="@+id/qstring_view1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="Question String and Category"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/uimage_view1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/anonymous_user_image" />

            <TextView
                android:id="@+id/uname_view2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp"
                android:layout_toEndOf="@+id/uimage_view1"
                android:layout_toRightOf="@+id/uimage_view1"
                android:text="UserName"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="Report" />

            <TextView
                android:id="@+id/time_view2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/uname_view2"
                android:layout_alignStart="@+id/uname_view2"
                android:layout_below="@+id/uname_view2"
                android:text="Time" />

            <TextView
                android:id="@+id/views_view1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/btn_answer"
                android:layout_alignBottom="@+id/btn_answer"
                android:layout_toLeftOf="@+id/time_view2"
                android:layout_toStartOf="@+id/time_view2"
                android:text="views" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <ListView
            android:id="@+id/ans_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6"></ListView>

</LinearLayout>




</LinearLayout>
